
            <div class="container-fluid">

                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <div class="btn-group pull-right">
                                <ol class="breadcrumb hide-phone p-0 m-0">
                                    <li class="breadcrumb-item"><a href="#">Aviationable</a></li>
                                    <li class="breadcrumb-item"><a href="#">Company Name</a></li>
                                    <li class="breadcrumb-item"><a href="#">Add</a></li>
                                </ol>
                            </div>
                            <h4 class="page-title">Add Employee</h4>
                        </div>
                    </div>
                </div>
                <!-- end page title end breadcrumb -->

                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                          <h4 class="m-t-0 header-title">Basic Details</h4>
                            <div class="row">
                                <div class="col-12">
                                    <div class="p-20">
                                      <%= form_for [@company, @employee] do |f| %>
                                        
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label">Salutation</label>
                                                <div class="col-10">
                                                  <%= f.text_field :salutation, class: "form-control" %>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label">First Name</label>
                                                <div class="col-10">
                                                  <%= f.text_field :first_name, class: "form-control" %>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label">Last Name</label>
                                                <div class="col-10">
                                                  <%= f.text_field :last_name, class: "form-control" %>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end row -->

                        </div> <!-- end card-box -->
                    </div><!-- end col -->
                </div>
                <!-- end row -->
                
               
                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                          <%= f.submit "Create Employee", class: "btn btn-dark btn-block" %>
                        </div>
                      </div>
                    </div>
<% end %>

                <!-- end row -->

            </div> <!-- end container -->
        