            <div class="container-fluid">

                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <div class="btn-group pull-right">
                                <ol class="breadcrumb hide-phone p-0 m-0">
                                    <li class="breadcrumb-item"><a href="#">Aviationable</a></li>
                                    <li class="breadcrumb-item active">Dashboard</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Dashboard</h4>
                        </div>
                    </div>
                </div>
                <!-- end page title end breadcrumb -->


                <div class="row">
                    <div class="col-lg-12">
                        <div class="card-box">
                            <h4 class="header-title mb-3">Companies</h4>

                            <div class="table-responsive">
                                <table class="table table-hover table-centered m-0">

                                    <thead>
                                    <tr>
                                        <th>Logo</th>
                                        <th>Name</th>
                                        <th>Employee Count</th>
                                        <th>Revenue</th>
                                        <th>Country</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% @companies.each do |company|%>
                                    <tr>
                                        <td>
                                            <% if company.banner.file? %>
                                                <%= image_tag company.banner.url, class: "rounded-circle thumb-sm", alt:"contact-img", title: "contact-img" %>
                                            <% else %>
                                                <img src="assets/images/users/avatar-3.jpg" alt="contact-img" title="contact-img" class="rounded-circle thumb-sm" />
                                            <% end %>
                                        </td>

                                        <td>
                                            <h5 class="m-0 font-weight-normal"><%= company.name %></h5>
                                            <p class="mb-0 text-muted"><small><%= company.revenue%></small></p>
                                        </td>

                                        <td>
                                            <%= company.employees_count %>
                                        </td>

                                        <td>
                                           <%= company.revenue %> USD
                                        </td>

                                        <td>
                                             <%= company.country %>
                                        </td>

                                        <td>
                                          <%= link_to "View", company_path(company.id), class: "btn btn-sm btn-danger" %>
                                        </td>
                                    </tr>
                                    <% end %>
                                    <tr>
                                        <td>
                                        </td>

                                        <td>

                                        </td>

                                        <td>

                                        </td>

                                        <td>
                                        </td>

                                        <td>
                                        </td>

                                        <td>
                                          <%= link_to new_company_path, class: "btn btn-sm btn-custom" do %>
                                          <i class="mdi mdi-plus"></i>
                                          <% end %>

                                        </td>
                                    </tr>


                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- end row -->

            </div> <!-- end container -->